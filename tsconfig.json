{
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2019",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "importHelpers": true,
    "rootDir": "src",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"],
}
